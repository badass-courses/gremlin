{
	"name": "wizardshit-ai",
	"private": true,
	"packageManager": "bun@1.3.4",
	"workspaces": [
		"apps/*",
		"packages/*",
		"tooling/*"
	],
	"scripts": {
		"build": "turbo build",
		"dev": "turbo dev",
		"lint": "turbo lint",
		"format": "biome format --write .",
		"format:check": "biome check --diagnostic-level=error .",
		"typecheck": "tsgo --noEmit",
		"add:web": "bun add --cwd apps/wizardshit-ai",
		"test": "vitest --dir packages",
		"test:run": "vitest run --dir packages",
		"test:watch": "vitest --dir packages",
		"test:coverage": "vitest run --coverage --dir packages",
		"e2e": "turbo e2e",
		"changeset": "changeset",
		"version": "changeset version",
		"release": "changeset publish"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.9",
		"@changesets/changelog-github": "^0.5.2",
		"@changesets/cli": "^2.29.8",
		"@effect/vitest": "^0.27.0",
		"@types/bun": "latest",
		"@typescript/native-preview": "^7.0.0-dev.20251216.1",
		"@vitest/coverage-v8": "^4.0.16",
		"oxlint": "^1.33.0",
		"turbo": "^2.6.3",
		"vitest": "^4.0.16"
	}
}
