{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": [".next/**", "!.next/cache/**", "dist/**"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"lint": {
			"outputs": []
		},
		"typecheck": {
			"dependsOn": ["^typecheck"],
			"outputs": []
		},
		"test": {
			"dependsOn": ["^build"],
			"outputs": ["coverage/**"],
			"inputs": ["src/**", "test/**", "tests/**", "__tests__/**", "*.config.*"]
		},
		"test:watch": {
			"cache": false,
			"persistent": true
		},
		"e2e": {
			"dependsOn": ["build"],
			"outputs": ["playwright-report/**", "test-results/**"],
			"inputs": ["e2e/**", "src/**", "playwright.config.*"]
		}
	}
}
